<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
	
		<!-- ESTILO  -->
		<template id="assets_frontend" inherit_id="website.assets_frontend" name="Banners">
 			<xpath expr="." position="inside">
				<link rel='stylesheet' href='/aloxa_turismo_theme/static/src/css/style.css'/>
				<script type='text/javascript' src='/aloxa_turismo_theme/static/src/js/main.js' />
			</xpath>
		</template>
		<!-- FIN ESTILO -->
		
	
		<!-- PAGINA: HOME -->
		<!-- Lista de Banners -->
		<template id="home_grid_banners" inherit_id="kingfisher.homepage_body" name="Home Grid Banners">
			<xpath expr="//div[@id='wrap']" position="inside">
				<t t-set="bins" t-value="website.get_banners_portada()"/>
				<t t-set="rows" t-value="4"/>
				<div class="container">
		            <div class="col-md-12" id="banners_grid">
		              <table width="100%">
		                <tbody>
		                  <tr t-ignore="true">
		                    <td t-foreach="range(0,rows)" t-as="row" t-attf-width="#{100/rows}%"></td>
		                  </tr>
		                  <tr t-foreach="bins" t-as="tr_banner">
		                    <t t-foreach="tr_banner" t-as="td_banner">
		                      <t t-if="td_banner">
		                      	  <t t-set="banner" t-value="td_banner['banner']" />
			                      <td t-att-colspan="td_banner['x'] != 1 and td_banner['x']"
			                          t-att-rowspan="td_banner['y'] != 1 and td_banner['y']"
			                          t-attf-class="oe_product oe_grid oe_product_borderless oe-height-#{td_banner['y']*2} #{ td_banner['class'] }">
										<a itemprop="url" t-att-href="website.sanitize_url(banner.url)">
											<div t-attf-class="oe_product_image">
												<span t-field="banner.imagen" t-field-options='{"widget": "image", "class": "img img-responsive"}' />
											</div>
										</a>
			                      </td>
		                      </t>
		                      <td t-if="not td_banner" class="oe-height-2"/>
		                    </t>
		                  </tr>
		                </tbody>
		              </table>
		              <t t-if="not bins">
		                <div class="text-center text-muted">
		                  <h3 class="css_editable_display">Ningún banner definido.</h3>
		                  <t groups="base.group_website_publisher">
		                    <p groups="base.group_sale_manager">Usa el <i>'Content'</i> en el menú superior para crear un nuevo producto de tipo banner.</p>
		                  </t>
		                </div>
		              </t>
		            </div>
	            </div>
			</xpath>
		</template>
		<!-- Fin Lista de Banners -->
		<!-- FIN PAGINA: HOME -->
			
	</data>
</openerp> 
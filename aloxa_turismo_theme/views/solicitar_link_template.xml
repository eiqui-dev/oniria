<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>    
    
		<template id="solicitud_link" name="Crontratar Link" page="True">
			<t t-call="website.layout">
				<div itemscope="itemscope" itemtype="http://schema.org/Product" id="wrap" class="js_sale">
					<div class="page-title">
			      		<div class="container">
							<div class="oe_structure"/>
						    <h1>Crear Link</h1>
						    <ul class="breadcrumb">
								<li><a href="/page/homepage">Inicio</a></li>
								<li class="active">Contratar Link</li>
							</ul>
						</div>
				    </div>
				
					<section t-attf-class="container mt8" id="solicitud_link_container">
				         <div class="row" style="margin-bottom:2em;">
				         	<div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
				         		<form class="form-horizontal" role="form">
					         		<h3>Tipo Link</h3>
					    			<div style="margin-bottom:2em;" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						         		<select class="form-control">
						         			<t t-foreach="servicios" t-as="serv">
						         				<option t-attf-value="serv.name"><span t-esc="serv.name"/></option>
						         			</t>
						         		</select>
						         	</div>
					         		<h3>Dirigir Hacia</h3>
					         		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
						         		<select class="form-control">
						         			<option value="enlace">Enlace</option>
						         			<option value="producto">Producto</option>
						         		</select>
					         		</div>
					         		<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
					         			<input type="text" class="form-control"/>
					         		</div>
					         
					         		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align:right; margin-top:2.5em;">
										<button class="btn btn-default" role="button">Enviar Solicitud</button>
									</div>
				         		</form>
				         	</div>
				         	<div class="col-xs-6 col-sm-6 col-md-8 col-lg-8">
				         		<h3>Vista Preliminar</h3>
				         	</div>
						</div>
					</section>
				</div>
			</t>
		</template>
		
    </data>
</openerp>

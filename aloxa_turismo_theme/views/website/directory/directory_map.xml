<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
		<template id="directory_map">
			<t t-set="is_events" t-value="False" />
			<!-- VISTA MAPA -->
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="directory-map"></div>
			<script type="text/javascript">
				var $DIRECTORY_ADDRESS=[
				<t t-foreach="bins" t-as="tr_product">
					<t t-foreach="tr_product" t-as="td_product">
						<t t-if="td_product">
							<t t-set="establishment" t-value="td_product['establishment']"/>
							<t t-set="event" t-value="td_product['events'] if 'events' in td_product and td_product['events'] and len(td_product['events'])==1 else False"/>

							<t t-if="establishment and establishment.partner_id.partner_latitude and establishment.partner_id.partner_longitude">
								[<t t-field="establishment.partner_id.partner_latitude"/>, <t t-field="establishment.partner_id.partner_longitude)" />],
								'/establecimiento/<t t-esc="slug(establishment)"/>',
								'<t t-field="establishment.name"/>',
							</t>
							<t t-if="event and event.address_id.partner_latitude and event.address_id.partner_longitude">
								<t t-set="is_events" t-value="True" />
								[<t t-field="event.address_id.partner_latitude"/>, <t t-field="event.address_id.partner_longitude)" />],
								'/evento/<t t-esc="slug(event)"/>',
								'<t t-field="event.name"/>',
							</t>
	                	</t>
	                </t>
	        	</t>
	        	];
	        	
	        	var $NOT_SHOW_GOOGLE_POIS = <t t-esc="is_events and 'true' or 'false'"/>;
			</script>
		</template>
		
	</data>
</openerp>
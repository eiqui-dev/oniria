<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>    
    
		<template id="directory_form_producto_contratado">
			<t t-set="product_type" t-value='producto_contratado.product_tur_id.tipo_producto' />
			<div itemscope="itemscope" itemtype="http://schema.org/Product" id="wrap" class="js_sale">
				<section t-attf-class="container mt8 oe_website_sale" id="product_detail">
			         <div class="row">
						<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 product-detail">
	                		<span itemprop="image" t-field="producto_contratado.product_tur_id.image" t-field-options='{"widget": "image", "class": "product_detail_img product-image"}'/>
				        </div>
						<div class="product-info"> 
							<div class="col-xs-12 col-md-5 col-lg-5 col-sm-6 product-detail">
				                <h1 itemprop="name" t-field="producto_contratado.product_tur_id.name">Nombre Producto</h1>
				                <span itemprop="url" style="display:none;" t-esc="'/directorio/%ss/%s' % (category_type,slug(producto_contratado))"/>
								<p class="text-muted "><t t-esc="producto_contratado.product_tur_id.description_sale"/></p>
								
								<div class="row">
									<table>
										<tr><td style="width:16px">
											<div class="icon"><span class="icon fa fa-calendar" /></div>
										</td><td>
											<b>AÃ±ada:</b> 
											<t t-esc="producto_contratado.product_tur_id.anho" />
										</td></tr>
										
										<tr><td style="width:16px">
											<div class="icon"><span class="icon fa fa-flask"/></div>
										</td><td>
											<t t-if="product_type == 'vino'">
												<b>Tipo Vino:</b> 
												<span t-if="producto_contratado.product_tur_id.tipovino" t-esc="producto_contratado.product_tur_id.tipovino.nombre" />
											</t>
											<t t-if="product_type == 'vinagre'">
												<b>Tipo Vinagre:</b> 
												<span t-if="producto_contratado.product_tur_id.tipovinagre" t-esc="producto_contratado.product_tur_id.tipovinagre.nombre" />
											</t>
										</td></tr>
										
										<tr><td style="width:16px">
											<div class="icon"><span class="icon fa fa-tint"/></div>
										</td><td>
											<b>Tipo Uva:</b> 
											<span t-if="producto_contratado.product_tur_id.uva" t-esc="producto_contratado.product_tur_id.uva.nombre" />
										</td></tr>
										
										<tr><td style="width:16px">
											<div class="icon"><span class="icon fa fa-star"/></div>
										</td><td>
											<b>Premios:</b> 
											<span t-if="producto_contratado.product_tur_id.premios" t-esc="producto_contratado.product_tur_id.premios.nombre" />
										</td></tr>
									</table>
								</div>
							</div> 
							
							<div class="col-xs-12 col-md-3 col-lg-3 col-sm-12 product-detail"> 
								<div class="block-policy"> 
									<div class="policy policy1"> 
										<div class="policy-inner">
											<i class="fa fa-money"></i> 
											<h2>30 days return</h2>money back
											</div> 
										</div> 
										<div class="policy policy2"> 
											<div class="policy-inner">
											<i class="fa fa-truck"></i>
											<h2>free shipping</h2>on all orders over $99
											</div> 
										</div> 
										<div class="policy policy3"> 
											<div class="policy-inner">
											<i class="fa fa-calendar"></i>
											<h2>lowest price</h2>guarantee
										</div> 
									</div> 
									<div class="policy policy4"> 
										<div class="policy-inner">
											<i class="fa fa-check-square"></i>
											<h2>safe shopping</h2>guarantee
										</div> 
									</div> 
								</div>
							</div> 
						</div>
					</div>
				</section>
			</div>
		</template>
		
    </data>
</openerp>

        <record id="view_establecimiento_calendar_attendance_form" model="ir.ui.view">
            <field name="name">establecimiento.calendar.attendance.form</field>
            <field name="model">turismo.establecimiento</field>
            <field name="inherit_id" ref="aloxa_turismo.establecimientxo_view_form"/> 
            <field name="arch" type="xml">
            
                <xpath expr="//page[@string='Imagenes Establecimiento']" position="after">
                   <page string="Horario">
                   	<field name="horario">
                    </field>
                </page>
                </xpath>
            </field>
        </record>        

    	<record id="view_establecimiento_calendar_attendance_tree" model="ir.ui.view">
            <field name="name">establecimiento.calendar.attendance.tree</field>
            <field name="model">establecimiento.calendar.attendance</field>
            <field name="arch" type="xml">
                <tree string="Working Time" editable="top">
                    <field name="name"/>
                    <field name="dayofweek"/>
                    <field name="hour_from" widget="float_time"/>
                    <field name="hour_to" widget="float_time"/>
                    <field name="date_from"/>
                </tree>
            </field>
        </record>

